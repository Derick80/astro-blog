---
import BaseHead from '../../components/BaseHead.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts'
import { getCollection } from 'astro:content'


const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)

const tags = [...new Set(posts.map((post) => post.data.tags).flat())];
console.log(tags, "tags");
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <BaseHead
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
    />
  </head>
  <body class='dark:bg-slate-800 text-black dark:text-white'>
    <Header />
    <main class='flex flex-grow h-screen'>
      <section class='flex flex-col gap-2'>
        <div class="flex gap-2 flex-wrap text-xs mb-4">
          {
          tags.map((tag) => (
            <a
              href={`/blog/tags/${tag}/`}
              class='border-2 rounded-md p-2 w-fit'
            >
              {tag}
            </a>
          ))
        }
        </div>
        <div class='text-black dark:text-white flex flex-col gap-4'>
          {
            posts.map((post) => (
              <div class='flex flex-col h-full w-full border p-1'>
                <div class='flex flex-row gap-2 justify-between'>
                  <a

                  href={`/blog/${post.slug}/`}>{post.data.title}</a>

                </div>
                <div class='flex flex-row gap-2'>
                  <div class='h-20 w-20'>
                    {post.data.heroImage && (
                      <img
                        src={post.data.heroImage}
                        alt={post.data.title}
                        class='object-scale-down h-full w-full'
                      />
                    )}
                  </div>
                  <div class='flex flex-col gap-2'>
                    {post.data.description}
                    <div class='flex flex-row gap-2'>
                           <div class='flex flex-col gap-2'>
               <p class='text-sm text-gray-500 underline'>
              Tags
              </p>
				<div class="flex flex-row gap-2">
          {
              post.data.tags?.map((tag) => (
                <a
                  href={`/blog/tags/${tag}`}
                  class='flex border-2 rounded-md p-1 w-fit h-fit text-sm text-black dark:text-white'
                >
                  {tag}
                </a>
              ))
            }
        </div>
			</div>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
