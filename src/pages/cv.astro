---
import { getCollection } from 'astro:content'
import { pubs } from '../../src/content/cv/pubs'
import { work_experience } from '../content/cv/workexperience'
import Layout from '../layouts/BlogPost.astro'
import { education } from '../content/cv/education'
import {skills} from '../content/cv/skills'
import BaseHead from '../components/BaseHead.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import Header from '../components/Header.astro'
const posts = (await getCollection('blog')).map((post) => {
  return {
    ...post,
    url: `/posts/${post.slug}`
  }
})
---

<!DOCTYPE html>
<html lang='en'>
  <head>

   <BaseHead
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
    />
  </head>
  <body class='dark:bg-slate-800 text-black dark:text-white'>
    <Header />
    <main class='flex flex-grow h-screen md:justify-center'>
      <section
        class="flex flex-col items-center w-full max-w-2xl p-4"
      >
        <div
          class="flex flex-col border-b mb-2"
        >
        <h1 class="text-3xl font-bold text-black dark:text-white">
          Derick Hoskinson, PhD
        </h1>
          <p
            class="text-base italic"
          >
Clinical scientist keen on using my expertise in clinical genetics and programming skills to lead a team of scientists and developers.
          </p>
        </div>
        <div
          class="mb-2 border-b flex flex-col w-full"
        >
          <p class='text-2xl font-bold'>
            Work Experience
          </p>
            <div
                class='mb-2 flex flex-col w-full'
              >
          {
            work_experience.map((job) => (

                <h2 class='text-xl font-bold text-black dark:text-white'>{job.institution}</h2>
                <div class='flex
                justify-between items-center gap-2'>
                  <h3 class='text-lg font-bold italic text-black dark:text-white'>{job.title}</h3>
                  <p class='text-base font-bold'>
                    {job.startDate} - {job.endDate}
                  </p>
                </div>
                <ul
                class='list-disc'
                >
                  {job.duties.map((duty) => (
                    <li
                    class='w-full text-sm list-di '
                    >{duty.duty}</li>
                  ))}
                </ul>

            ))
          }
          </div>
        </div>
        <div
          class="mb-2 border-b"
        >
          <h2 class='text-xl font-bold text-black dark:text-white'>Education</h2>
          {education.map((edu)=> (
            <div
              class='text-sm'
            >
                              <div class='flex justify-between'>

              <h3
                                class='text-black dark:text-white text-base font-bold'
              >
                {edu.institution}
                </h3>
                <p class='text-base font-bold'>
                  {edu.startDate} - {edu.endDate}
                </p>
                </div>
                <p
                class='text-base italic'
                >{edu.degree}</p>
              </div>
          ))}
        </div>
        <div>
          {
            pubs.map((pub) => (
              <div>
                <h3
                  class='text-base font-bold italic text-black dark:text-white'
                >{pub.title}</h3>
                <p
                class='text-xs'
                >{pub.authors}</p>
              <div class="flex gap-2">
                <p
                class='text-xs'
                >{pub.journal}</p>
                <p
                class='text-xs'
                >{pub.edition}</p>
                <p
                class='text-xs'
                >{pub.year}</p>
               <a
               class="text-xs"
                target='_blank'
          rel='noopener noreferrer'
               href={pub.pdf}

               >Link</a>



              </div>
              </div>
            ))
          }
        </div>
        <div class="flex flex-col gap-2 border-t-2">
           <h1 class="text 2xl font-bold text-black dark:text-white">
            Skills
          </h1>
         <div class="flex gap-2 w-fill flex-wrap">
          {skills.map((skill)=>(
            <div class="flex flex-row border p-1 flex-wrap">
              <h3 class="text-xs font-bold text-black dark:text-white">{skill.skill}</h3>
              </div>
          ))}</div>

        </div>
      </section>
    </main>
  </body>
</html>



