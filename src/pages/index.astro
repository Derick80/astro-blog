---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import type { CollectionEntry } from 'astro:content'

type Props = CollectionEntry<'blog'>['data'];

const { tags } = Astro.props;


---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body
		class="dark:bg-slate-800 text-black dark:text-white"
	>
		<Header title={SITE_TITLE} />
		<main
		class="flex flex-grow h-screen flex-col items-center justify-center text-center"
		>
<h1 class="text-4xl font-bold text-black dark:text-white">It's Me
{
	tags?.map((tag) => {
		return (
			<span class="text-4xl font-bold text-black dark:text-white">
				{tag}
			</span>
		);
	})
}

</h1>

		</main>
		<Footer />
	</body>
</html>
