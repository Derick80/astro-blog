---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const pageTitle =  Astro.props.title
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/BrandIcon.ico" />
    <link rel='alternate' type='application/rss+xml' title='RSS Feed' href='/rss.xml' />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="flex flex-col text-black dark:bg-slate-800 dark:text-white max-w-5xl mx-auto h-full">
    <Header />

    <main
      class="flex w-full h-full flex-grow flex-col items-center justify- gap-4 "
    >
      <slot />
    </main>
   <Footer />

    <script></script>
  </body>
</html>
